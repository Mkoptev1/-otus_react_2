{
    "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "types/*": ["src/types/*"],
        "components/*": ["src/components/*"],
        "@/*": ["src/*"]
      },
      "target": "es5",
      "removeComments": true,
      "outDir": "js",
      "sourceMap": true,
      "outFile": "main.js",
      "jsx": "react",
      "esModuleInterop": true,
    },
    "include": [
      "src/**/*",
      "scripts/**/*",
      "lessons/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}